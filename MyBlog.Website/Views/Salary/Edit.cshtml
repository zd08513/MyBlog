@model MyBlog.Entity.SalaryInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "编辑工资信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>添加</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>添加工资信息</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Money)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Money)
            @Html.ValidationMessageFor(model => model.Money)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SendDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SendDate)
            @Html.ValidationMessageFor(model => model.SendDate)
        </div>

        <p>
            <input type="submit" value="确定" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("返回列表", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

