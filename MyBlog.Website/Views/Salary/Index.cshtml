@using MyBlog.Entity;
@using MyBlog.Entity.SearchInfo;

@model IEnumerable<SalaryInfo>

@{
    ViewBag.Title = "工资列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SalaryInfoSearchInfo searchInfo = ViewBag.SalaryInfoSearchInfo as SalaryInfoSearchInfo;
}

<h2>公司列表</h2>

<p>
    @Html.ActionLink("创建工资", "Create")
</p>
<table class="table table-bordered table-condensed table-striped">
    <tr class="td_tr_bg_blue">
        <th>
            @Html.DisplayNameFor(model => model.SendDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Money)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th></th>
    </tr>

    @foreach (SalaryInfo item in Model)
    {
        <tr>
            <td class="">
                @Html.DisplayFor(modelItem => item.SendDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Money)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.Id }) |
                @Html.ActionLink("详情", "Details", new { id = item.Id }) |
                @Html.ActionLink("删除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<h3>合计：&yen;@searchInfo.SalarySum</h3>

@UIHelper.BasePagerShow(searchInfo, Url.Action("Index", new { controller = "Company" }))

<p>
    @Html.ActionLink("返回主页", "index", "home")
</p>